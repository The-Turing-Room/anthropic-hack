{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev Mobile",
            "request": "launch",
            "type": "dart",
            "program": "holo_tutor/lib/main.dart",
            "args": [
                "--dart-define=DEV_BUILD=true",
                "--flavor",
                "dev"
            ]
        },
        {
            "name": "Profile Mobile",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "program": "holo_tutor/lib/main.dart",
            "args": [
                "--dart-define=DEV_BUILD=true"
            ]
        },
        {
            "name": "Dev Web",
            "request": "launch",
            "type": "dart",
            "program": "holo_tutor/lib/main_web.dart",
            "deviceId": "chrome",
            "args": [
                "--dart-define=FLUTTER_WEB_USE_SKIA=true",
                "--web-renderer",
                "canvaskit",
                // Fixes the port for auth whitelisting purposes
                "--web-hostname",
                "localhost",
                "--web-port",
                "5000",
                "--dart-define=DEV_BUILD=true"
            ]
        },
        {
            "name": "Dev MacOS",
            "request": "launch",
            "type": "dart",
            "deviceId": "macos",
            "program": "holo_tutor/lib/main_macos.dart",
            "args": [
                "--dart-define=DEV_BUILD=true"
            ]
        }
    ]
}